<h1>Recipes</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.id %></td>
        <td><%= link_to recipe.name, recipe_path(recipe) %></td>
        <td><%= recipe.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_recipe_path(recipe), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', recipe_path(recipe), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_recipe_path, :class => 'btn btn-primary' %>
